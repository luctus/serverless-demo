{
  "apiRequestPostCreateTemplate": {
    "application/json": {
      "operation": "create",
      "tableName": "blog-posts",
      "payload": {
        "Item": {
          "content": "$input.json('$')"
        }
      }
    }
  },
  "apiRequestPostReadTemplate": {
    "application/json": {
      "operation": "read",
      "tableName": "blog-posts",
      "payload": {
        "Key": {
          "postId": "$input.params('postId')"
        }
      }
    }
  },
  "apiResponsePostReadTemplate": {
    "application/json": ""
  }
}
